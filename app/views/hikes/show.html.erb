<h3><%= @hike.name %></h3>

<div class='row'>
  <div class='col s4'>
    <p>
      <b>Difficulty:</b>
      <%= @hike.difficulty %>
    </p>
  </div>
  <div class='col s4'>
    <p>
      <b>Distance:</b>
      <%= @hike.length %> miles
    </p>
  </div>
  <div class='col s4'>
    <p>
      <b>Elevation Gain:</b>
      <%= @hike.elevation %> feet
    </p>
  </div>
</div>

<div class='row container-fluid'>
  <div class='col s6'>
    <%= image_tag @hike.image.url, class: 'show-image' %>
  </div>
  <div class='col s6'>
    <div id="map"></div>
    <script>
      function initMap() {
        var target = {lat: <%= @lat %>, lng: <%= @lng %>};
        var map = new google.maps.Map(document.getElementById('map'), {
          zoom: 11,
          center: target
        });
        var marker = new google.maps.Marker({
          position: target,
          map: map
        });
      }
    </script>
    <script async defer
    src='https://maps.googleapis.com/maps/api/js?key=AIzaSyCCHvwf-TfXUOU12tRKjippgOfqs5iVboM&callback=initMap'>
    </script>
  </div>
</div>

<h5>Description</h5>

<p><%= @hike.description %></p>

<hr>

<div class='row'>
  <div class='col-md-6'>
    <h5>Reviews</h5>
  </div>
  <div class='col-md-6'>
    <%= link_to 'Add a Review', new_hike_review_path(@hike), class: 'btn btn-outline-primary' %>
  </div>
</div>

<% @hike.reviews.each do |review| %>
  <div class="card container">
    <div class="card-content cyan lighten-2">

      <div class="row">
        <div class="col s6">
          <big><p><%= review.author %></p></big>
        </div>
        <div class="col s6" id="review-rating">
          <%= review.rating %>/5
          <br>
          <%= review.created_at %>
        </div>
      </div><!-- row -->

      <div class="divider"></div>
      <div class="card-action">
        <p class="card-text"><%= review.content %></p>
        <% if current_user && (review.account_id == current_user.account.id) %>
          <%= link_to 'Edit', edit_hike_review_path(@hike, review), class: 'card-link' %>
        <% end %>
        <% if current_user && (review.account_id == current_user.account.id || current_user.admin) %>
          <%= link_to 'Delete', hike_review_path(@hike, review), method: 'delete', data: { confirm: 'Are you sure you want to delete your review?' }, class: 'card-link' %>
        <% end %>
      </div><!-- card-action -->

    </div><!-- card-content -->
  </div><!-- card -->
<% end %>

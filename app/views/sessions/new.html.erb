<div class="container">
  <h3>Sign In</h3>

  <%= form_tag signin_path do %>
    <div class="form-group">
      <%= label_tag :email %>
      <br>
      <%= text_field_tag :email %>
    </div>
    <div class="form-group">
      <%= label_tag :password %>
      <br>
      <%= password_field_tag :password %>
    </div>
    <%= submit_tag 'Sign In', class: 'btn btn-outline-success' %>
  <% end %>
</div>
